mixin modal(modalId, closeId, openId)
  - var id = '#' + modalId
  - var idClose = '#' + closeId
  - var idOpen = '#' + openId
  div(id=modalId).modal
    .modal__content
      h2 Info Details
      p
        | Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer nec odio. Praesent libero. Sed cursus ante dapibus diam. Sed nisi. Nulla quis sem at nibh elementum imperdiet. Duis sagittis ipsum. Praesent mauris. Fusce nec tellus sed augue semper porta.
      button(id=closeId) Close
    script.
      document.addEventListener("DOMContentLoaded", function() {
        System.import('/js/modal.bundle.js')
          .then(function(modules){
            console.log(modules)
            let $modal = new modules.default({
              modal: '#{id}',
              modalOpen: '#{idOpen}',
              modalClose: '#{idClose}'
            });
            
            $modal.modalOpen.on('click', function(event){
              event.preventDefault()
              $modal.modal.addClass('is-visible')
            });

            $modal.modalClose.on('click', function(event){ 
              $modal.modal.removeClass('is-visible')
            });
        });
      });